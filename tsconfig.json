{
  "compilerOptions": {
      "baseUrl": ".",
      "target": "ES2022",
      "module": "CommonJS",
      "moduleResolution": "node",
      "rootDir": "src",
      "outDir": "build",
      "removeComments": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "paths": {
          "@configs/*": ["src/configs/*"],
          "@controllers/*": ["src/controllers/*"],
          "@utils/*": ["src/utils/*"],
          "@middlewares/*": ["src/middlewares/*"],
          "@models/*": ["src/models/*"],
          "@routes/*": ["src/routes/*"],
          "@schemas/*": ["src/schemas/*"],
          "@services/*": ["src/services/*"],
          "@types/*": ["src/types/*"]
      },
      "sourceMap": true,
      "inlineSources": true,
      "sourceRoot": "/",
      "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__tests__/**",
    "jest.config.ts",
    "src/test"
  ]
}
