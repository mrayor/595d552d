{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],
    "rootDir": ".",
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**/*",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "coverage"
  ]
} 